@using ABCLearn.DataContext
@{
    ViewBag.title = "ABC Learn";
    var Courses = CourseDAO.Instance.Courses();
    int numOfCourse = CourseDAO.Instance.Courses().Count;
    if (numOfCourse % 10 == 0)
    {
        numOfCourse = numOfCourse / 10;
    }
    else
    {
        numOfCourse = (numOfCourse / 10) + 1;
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    @Html.Partial("_head")
</head>

<body>
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="#" class="navbar-brand p-0 d-flex align-items-center">
                <img src="~/img/Logo-icon.png" class="fa-font-awesome-logo-full img-fluid" style="height: 200px;" alt="logo-ABCLearn">
                <h1 class="text-primary m-0">Dmin</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="@Url.Action("pageStudent", "Admin", new{page = 0})" class="nav-item nav-link ">Student</a>
                    <a href="@Url.Action("Lecturer", "Admin", new{page = 0})" class="nav-item nav-link ">Lecturer</a>
                    <a href="@Url.Action("Course", "Admin")" class="nav-item nav-link active">Course</a>
                    <a href="@Url.Action("Calendar", "Admin")" class="nav-item nav-link">Calendar</a>
                    <a href="#" class="nav-item nav-link">Notification</a>

                </div>
                @if (UserLogin.Instance.Islogin)
                {
                    <a href="#" class="nav-item nav-link">@UserLogin.Instance.FirstName @UserLogin.Instance.LastName</a>
                    <a href="#" class="btn btn-primary rounded-pill py-2 px-4">Logout</a>
                }
                else
                {
                    <a href="#" class="btn btn-primary rounded-pill py-2 px-4">Join now</a>
                }
            </div>
        </nav>
    </div>
    <!-- tab search dictionary -->
    <div class="container-fluid bg-primary hero-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white"></h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="text-center">Course Table</h2>
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Detail</th>
                    <th>Slot</th>
                    <th>Number Of Student</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Courses)
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.Title</td>
                        <td>@course.Detail</td>
                        <td>@course.Calendars.Count</td>
                        <td>@course.Students</td>
                        <td>Action</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="justify-content-center ">
            @for (int i = 0; i < numOfCourse; i++)
            {
                <a href="@Url.Action("pageStudent", "Admin", new{page = i, max = numOfCourse})">@(i + 1)</a>
            }
        </div>
    </div>
</body>

</html>