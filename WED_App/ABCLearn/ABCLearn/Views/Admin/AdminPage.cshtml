@using ABCLearn.DataContext
@{
    ViewBag.title = "ABC Learn";
    var Students = Model;
    int numOfSutdent = StudentDAO.Instance.Students().Count;
    if(numOfSutdent%8==0){
        numOfSutdent = numOfSutdent / 8;
    }else{
        numOfSutdent = (numOfSutdent / 8) + 1;
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    @Html.Partial("_head")
</head>

<body>
    @Html.Partial("_navAdmin")
    <!-- tab search dictionary -->
    <div class="container-fluid bg-primary hero-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white"</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="text-center" >Student Table</h2>
        <form action="@Url.Action("searchStudentByLastname","Student")" method="post">
			<input type="text" class="btn btn-primary" name="LastName" value="" />
			<button id="btnSub" type="submit" class="btn col-3 btn-primary">Search by Last name</button>
		</form>
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Number Of course</th>
                    <th>Date Create</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Students)
                {
                    <form action="@Url.Action("StudentAction","Student")" method="post">
                    <tr>
                        <td>@student.Id<input type="hidden" name="idStudent" value="@student.Id" /></td>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Courses.Count</td>
                        <td>@student.DateCreated.Date.ToString()</td>
                        <td>
                            <div class="d-flex row">
                                <a href="@Url.Action("ViewStudent","Student", new{idStudent = @student.Id})" name="btnStudentAdmin" class="col-6 btn btn-primary">View</a>
                                <button type="submit" name="btnStudentAdmin" class="col-6 btn btn-primary" value="Delete" style="color: red">Delete</button>
                            </div>
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>

        
        <div class="justify-content-center ">
            @for (int i = 0; i < numOfSutdent; i++)
            {
                <a href="@Url.Action("Student", "Admin", new{page = i, max = numOfSutdent})">@(i + 1)</a>
            }
        </div>
    </div>
    @Html.Partial("_endScript")
</body>

</html>