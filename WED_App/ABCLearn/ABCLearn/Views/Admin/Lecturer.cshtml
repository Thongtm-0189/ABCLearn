@using ABCLearn.DataContext
@{
    ViewBag.title = "ABC Learn";
    var Lecturers = Model;
    int numOflecturer = LecturerDAO.Instance.Lecturers().Count;
    if (numOflecturer % 8 == 0)
    {
        numOflecturer = numOflecturer / 8;
    }
    else
    {
        numOflecturer = (numOflecturer / 8) + 1;
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    @Html.Partial("_head")
</head>

<body>
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="#" class="navbar-brand p-0 d-flex align-items-center">
                <img src="~/img/Logo-icon.png" class="fa-font-awesome-logo-full img-fluid" style="height: 200px;" alt="logo-ABCLearn">
                <h1 class="text-primary m-0">Dmin</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="@Url.Action("pageStudent", "Admin", new{page = 0})" class="nav-item nav-link ">Student</a>
                    <a href="@Url.Action("Lecturer", "Admin", new{page = 0})" class="nav-item nav-link active">Lecturer</a>
                    <a href="@Url.Action("Course", "Admin")" class="nav-item nav-link">Course</a>
                    <a href="@Url.Action("Calendar", "Admin")" class="nav-item nav-link">Calendar</a>
                    <a href="#" class="nav-item nav-link">Notification</a>

                </div>
                @if (UserLogin.Instance.Islogin)
                {
                    <a href="#" class="nav-item nav-link">@UserLogin.Instance.FirstName @UserLogin.Instance.LastName</a>
                    <a href="#" class="btn btn-primary rounded-pill py-2 px-4">Logout</a>
                }
                else
                {
                    <a href="#" class="btn btn-primary rounded-pill py-2 px-4">Join now</a>
                }
            </div>
        </nav>
    </div>
    <!-- tab search dictionary -->
    <div class="container-fluid bg-primary hero-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white"></h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="text-center">Lecturer Table</h2>
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Number Of course</th>
                    <th>Number Of Quiz</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lecturer in Lecturers)
                {
                    <form action="@Url.Action("LecturertAction", "Admin")" method="post">
                    <tr>
                        <td>@lecturer.Id<input type="hidden" name="idLecturer" value="@lecturer.Id" /></td>
                        <td>@lecturer.FirstName</td>
                        <td>@lecturer.LastName</td>
                        <td>@lecturer.Courses.Count <input type="hidden" name="countCourse" value="@lecturer.Courses.Count" /></td>
                        <td>@lecturer.Quizs.Count</td>
                        <td>
                            <div class="d-flex row">
                                <button name="btnLecturerAdmin" type="submit" class="col-6 btn btn-primary" value="View">View</button>
                                <button name="btnLecturerAdmin" type="submit" class="col-6 btn btn-primary" value="Delete" style="color: red">Delete</button>
                            </div>
                        </td>
                    </tr>
                    </form>
                }
            </tbody>
        </table>
        <div class="justify-content-center ">
            @for (int i = 0; i < numOflecturer; i++)
            {
                <a href="@Url.Action("pageStudent", "Admin", new{page = i, max = numOflecturer})">@(i + 1)</a>
            }
        </div>
    </div>
    <script>
        if ("@TempData["Lecturer"]") {
            console.log("@TempData["Lecturer"]");
        }
    </script>
</body>

</html>